<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="com.tiltandco.appversion"
    version="0.1.0">

    <name>AppVersion</name>
    <description>Application version number getter.</description>
    <license>Apache 2.0</license>
    <keywords>cordova,plugin,skeleton</keywords>

    <js-module src="www/AppVersion.js" name="AppVersion">
        <clobbers target="appversion" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AppVersion">
                <param name="android-package" value="com.tiltandco.appversion.AppVersion"/>
            </feature>
        </config-file>
        <!-- copy plugin and supporting files -->
        <source-file src="src/android/src/com/tiltandco/appversion" target-dir="src/com/tiltandco" />
      
     </platform>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="AppVersion">
                <param name="ios-package" value="AppVersion"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/AppVersion.h" />
        <source-file src="src/ios/AppVersion.m" />
        
    </platform>


</plugin>
